<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ActivityFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">



        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/card_background"
                    android:padding="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="2dp"
                    android:elevation="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/yoga_icon"
                        android:scaleType="fitCenter"
                        android:background="@drawable/image_rounded_corners"
                        android:contentDescription="yoga_session" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yoga Session"
                        android:textSize="20sp"
                        android:textColor="@color/bold_green"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />

                    <!-- Temps et niveau -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="4dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/medal_icon"
                            android:contentDescription="beginner_level" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20 min - Débutant"
                            android:layout_marginStart="8dp"
                            android:textColor="@color/colorOnBackground" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/start_yoga"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Commencer"
                        android:layout_marginTop="8dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_rounded_corners"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/card_background"
                    android:padding="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="2dp"
                    android:elevation="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/workout_icon"
                        android:scaleType="fitCenter"
                        android:background="@drawable/image_rounded_corners"
                        android:contentDescription="full_body_workout" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Full Body Workout"
                        android:textSize="20sp"
                        android:textColor="@color/bold_green"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />

                    <!-- Temps et niveau -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="4dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/medal_icon"
                            android:contentDescription="beginner_level" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30 min - Intermédiaire"
                            android:layout_marginStart="8dp"
                            android:textColor="@color/colorOnBackground" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/start_full_body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Commencer"
                        android:layout_marginTop="8dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_rounded_corners"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/card_background"
                    android:padding="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="2dp"
                    android:elevation="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/cardio_icon"
                        android:scaleType="fitCenter"
                        android:background="@drawable/image_rounded_corners"
                        android:contentDescription="cardio_blast" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cardio Blast"
                        android:textSize="22sp"
                        android:textColor="@color/bold_green"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />

                    <!-- Temps et niveau -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="4dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/medal_icon"
                            android:contentDescription="beginner_level" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="25 minutes - Avancé"
                            android:layout_marginStart="8dp"
                            android:textColor="@color/colorOnBackground" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/start_cardio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Commencer"
                        android:layout_marginTop="8dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_rounded_corners"
                        android:textColor="@android:color/white" />
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vous êtes plus fort que vous ne le pensez !"
            android:textSize="16sp"
            android:textColor="?attr/colorOnBackground"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/card_background"
                    android:padding="8dp"
                    android:layout_marginBottom="16dp"
                    android:elevation="6dp">

                    <!-- Image à gauche -->
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/n1"
                        android:scaleType="centerCrop"
                        android:background="@drawable/image_rounded_corners"
                        android:clipToOutline="true"
                        android:contentDescription="Fitness Tip" />

                    <!-- Texte et bouton à droite -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5 astuces pour s'étirer efficacement"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnBackground" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Maximisez vos performances avec ces conseils simples."
                            android:textColor="?attr/colorOnBackground"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:text="Voir plus"
                            android:textSize="10sp"
                            android:layout_marginTop="8dp"
                            android:backgroundTint="@color/green2"
                            android:textColor="@android:color/white" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/card_background"
                    android:padding="8dp"
                    android:layout_marginBottom="16dp"
                    android:elevation="6dp">

                    <!-- Image à gauche -->
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/n1"
                        android:scaleType="centerCrop"
                        android:background="@drawable/image_rounded_corners"
                        android:clipToOutline="true"
                        android:contentDescription="New Exercises" />

                    <!-- Texte et bouton à droite -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nouveaux exercices pour le cardio"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnBackground" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Boostez votre endurance avec ces nouvelles séries."
                            android:textColor="?attr/colorOnBackground"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:text="Voir plus"
                            android:textSize="10sp"
                            android:layout_marginTop="8dp"
                            android:backgroundTint="@color/green2"
                            android:textColor="@android:color/white" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/card_background"
                    android:padding="8dp"
                    android:layout_marginBottom="16dp"
                    android:elevation="6dp">

                    <!-- Image à gauche -->
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/n1"
                        android:scaleType="centerCrop"
                        android:background="@drawable/image_rounded_corners"
                        android:clipToOutline="true"
                        android:contentDescription="Fitness Tip" />

                    <!-- Texte et bouton à droite -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5 astuces pour s'étirer efficacement"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnBackground" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Maximisez vos performances avec ces conseils simples."
                            android:textColor="?attr/colorOnBackground"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:text="Voir plus"
                            android:textSize="10sp"
                            android:layout_marginTop="8dp"
                            android:backgroundTint="@color/green2"
                            android:textColor="@android:color/white" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/card_background"
                    android:padding="8dp"
                    android:layout_marginBottom="16dp"
                    android:elevation="6dp">

                    <!-- Image à gauche -->
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/n1"
                        android:scaleType="centerCrop"
                        android:background="@drawable/image_rounded_corners"
                        android:clipToOutline="true"
                        android:contentDescription="New Exercises" />

                    <!-- Texte et bouton à droite -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nouveaux exercices pour le cardio"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnBackground" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Boostez votre endurance avec ces nouvelles séries."
                            android:textColor="?attr/colorOnBackground"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:text="Voir plus"
                            android:textSize="10sp"
                            android:layout_marginTop="8dp"
                            android:backgroundTint="@color/green2"
                            android:textColor="@android:color/white" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</FrameLayout>